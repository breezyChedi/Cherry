{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off", // Allow the use of 'any' type
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }], // Allow unused vars starting with '_'
    "@typescript-eslint/no-unused-expressions": "off", // Disable unused expressions rule
    "no-console": "off" // Allow 'console.log' during development
  }
}
